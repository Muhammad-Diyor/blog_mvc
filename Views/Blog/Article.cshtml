@model PostViewModel

<section class="blog" id="blog">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Content</p>
                <p class="card-text"><small class="text-muted">Create: @Model.CreatedDate</small></p>
                @if(@Model.IsEdited)
                {
                    <p class="card-text"><small class="text-muted">Update: @Model.UpdatedDate</small></p>
                }
            </div>
            <img class="card-img-bottom article_image" src="@Model.Image" alt="Card image cap">
        </div>
    </div>
</section>